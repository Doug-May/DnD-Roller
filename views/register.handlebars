<div class="row userWindow">
   <div class="col-md-6 mx-auto">
      <div class="card card-body">
         <h1 style="margin-bottom:15px" class="text-center">Create Account</h1>
         <form action="/users/register" method="post">
            <div class="form-group">
               <label for="name"><p>Name</p></label>
               <input type="text" class="form-control" name="name" value="{{name}}" required>
            </div>
            <div class="form-group">
               <label for="email"><p>Email</p></label>
               <input type="email" class="form-control" name="email" value="{{email}}" required>
            </div>
            <div class="form-group">
               <label for="password"><p>Password</p></label>
               <input type="password" class="form-control" name="password1" value="{{password1}}" required>
            </div>
            <div class="form-group">
               <label for="password"><p>Confirm Password</p></label>
               <input type="password" class="form-control" name="password2" value="{{password2}}" required>
            </div>
            <button class="accent" type="submit" name="button"><p>Submit</p></button>
         </form>
      </div>
   </div>
</div>
